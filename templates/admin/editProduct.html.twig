{% extends "admin/index.html.twig" %}

{% block body %}
<div class="container">
{{ form_start(form) }}
<div class="mb-3">
  <label for="" class="form-label">Product Name</label>
  {{form_widget(form.productName)}}
  
</div>

<div class="mb-3">
  <label for="" class="form-label">The Price</label>
  {{form_widget(form.price)}}
  
</div>

<div class="mb-3">
  <label for="" class="form-label">Image</label>
  {{form_widget(form.image)}}
  <img src="{{data.image}}" class="img-thumbnail rounded-top" alt="">
</div>

<div class="mb-3">
 
  <label for="" class="form-label">Quantity</label>
  {{form_widget(form.quantity)}}
  
</div>
<div class="mb-3">
  <label for="" class="form-label">Description</label>
  {{form_widget(form.description)}}
  
</div>

<div class="mb-3">
  <label for="" class="form-label">Brand</label>
  {{form_widget(form.brand)}}
</div>

<div class="mb-3">
  <label for="" class="form-label">Category</label>
  {{form_widget(form.CategoryId)}}
</div>

 <button type="submit" name="app_admin_edit_product"  class="btn btn-success">Confirm to update product</button>
{{form_end(form)}}
</div>
{% endblock %}