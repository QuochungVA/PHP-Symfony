{% extends "admin/index.html.twig" %}

{% block body %}
<a href="{{path('app_create_product')}}" class="btn btn-info">Create new product</a>

    <div class="container">
        <table class="table table-hover table-inverse table-responsive">
            <thead class="thead-inverse">
                <tr>
                    <th>ID</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for row in list_products %}
                    <tr>
                        <td scope="row">{{row.id}}</td>
                        <td>{{row.productName}}</td>
                        <td>{{row.price}}</td>
                        <td>{{row.quantity}}</td>
                        <td>
                        <a name="" id="" class="btn btn-outline-dark" href="{{path('app_admin_edit_product',{'id':row.id})}}" role="button">Edit</a>
                        <a name="" id="" class="btn btn-outline-danger" href="{{path('app_admin_delete_product',{'id':row.id})}}" role="button">Delete</a>
                        <a name="" id="" class="btn btn-outline-success" href="{{path('app_admin_details_product',{'id':row.id})}}" role="button">Details</a>
                        </td>
                    </tr>
                {% endfor %}
                    
                </tbody>
        </table>
        
    </div>
{% endblock %}